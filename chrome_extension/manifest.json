{
  "manifest_version": 3,
  "name": "Instant Google Scraper",
  "version": "1.0.0",
  "description": "Trigger your Playwright scrapers via a simple popup and download CSVs.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Instant Google Scraper"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "*://localhost/*",
    "*://127.0.0.1/*",
    "*://*.onrender.com/*"
  ],
  "options_page": "options.html"
}
